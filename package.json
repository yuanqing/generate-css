{
  "name": "generate-css",
  "version": "0.0.1",
  "description": "Dynamically generate functional CSS classes from HTML and JavaScript source files",
  "keywords": [
    "css",
    "dynamic-css",
    "functional-css",
    "generate-css",
    "style"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/generate-css.git"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "generate-css": "lib/cli.js"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "yarn run clean && concurrently --raw 'yarn run build-css' 'yarn run build-ts'",
    "build-css": "cpy 'css/**/*.css' '../lib' --cwd src --parents",
    "build-ts": "tsc",
    "clean": "rimraf '*.log' .nyc_output coverage lib",
    "fix": "concurrently --raw 'yarn run fix-css' 'yarn run fix-json' 'yarn run fix-ts'",
    "fix-css": "stylelint --fix 'src/**/*.css'",
    "fix-json": "prettier --loglevel error --write '*.json'",
    "fix-ts": "eslint --fix 'src/**/*.ts'",
    "lint": "concurrently --raw 'yarn run lint-css' 'yarn run lint-ts'",
    "lint-css": "stylelint 'src/**/*.css'",
    "lint-ts": "eslint 'src/**/*.ts'",
    "prepublishOnly": "yarn run clean && yarn run build",
    "reset": "yarn run clean && rimraf node_modules yarn.lock && yarn install",
    "start": "node lib/cli.js 'sandbox/*.html' --prepend sandbox/prepend.css --append sandbox/append.css --config sandbox/generate-css.config.json --output sandbox/style.css",
    "test": "yarn run clean && tap 'src/**/__tests__/**/*.ts' --coverage-report html --coverage-report text --no-browser --reporter terse",
    "watch": "yarn run clean && concurrently --raw 'yarn run watch-css' 'yarn run watch-ts'",
    "watch-css": "chokidar 'src/css/**/*.css' --command 'yarn run build-css' --initial --silent",
    "watch-ts": "tsc --preserveWatchOutput --watch"
  },
  "dependencies": {
    "chokidar": "^3.4.2",
    "csso": "^4.0.3",
    "find-up": "^5.0.0",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "normalize.css": "^8.0.1",
    "npmlog": "^4.1.2",
    "prettier": "^2.1.2",
    "sade": "^1.7.3"
  },
  "devDependencies": {
    "@types/csso": "^3.5.1",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.11.1",
    "@types/npmlog": "^4.1.2",
    "@types/prettier": "^2.1.1",
    "@types/sade": "^1.7.2",
    "@types/tap": "^14.10.1",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.9.0",
    "eslint-config-yuanqing": "^0.0.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-yuanqing": "^0.0.1",
    "tap": "^14.10.8",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint"
    ],
    "*.ts": [
      "eslint"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "stylelint": {
    "extends": "stylelint-config-yuanqing"
  }
}
