{
  "name": "generate-css",
  "version": "0.0.0",
  "description": "Dynamically generate functional CSS classes from HTML and JavaScript source files",
  "keywords": [
    "css",
    "dynamic-css",
    "functional-css",
    "generate-css",
    "style"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/generate-css.git"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "generate-css": "lib/cli.js"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf '*.log' lib",
    "fix": "eslint --fix '{src,test}/**/*.ts' && prettier --loglevel error --write '*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "prepublishOnly": "yarn run clean && yarn run build",
    "reset": "yarn run clean && rimraf node_modules yarn.lock && yarn install",
    "start": "ts-node src/cli.ts 'sandbox/*.html' --base sandbox/base.css --config sandbox/generate-css.config.json --output sandbox/style.css",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "chokidar": "^3.4.2",
    "csso": "^4.0.3",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "npmlog": "^4.1.2",
    "prettier": "^2.1.2",
    "sade": "^1.7.3"
  },
  "devDependencies": {
    "@types/csso": "^3.5.1",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.11.1",
    "@types/npmlog": "^4.1.2",
    "@types/prettier": "^2.1.1",
    "@types/sade": "^1.7.2",
    "eslint": "^7.9.0",
    "eslint-config-yuanqing": "^0.0.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": "yuanqing"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
